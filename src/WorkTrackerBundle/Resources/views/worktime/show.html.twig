{% extends 'WorkTrackerBundle::base.html.twig' %}

{% block body %}
    <h1>Worktime</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workTime.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{% if workTime.start %}{{ workTime.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{% if workTime.end %}{{ workTime.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('worktime_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('worktime_edit', { 'id': workTime.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
